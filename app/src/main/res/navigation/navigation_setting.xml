<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_setting"
    app:startDestination="@id/global_setting_fragment">

    <fragment
        android:id="@+id/global_setting_fragment"
        android:name="com.example.sunmoviedb.ui.globalsetting.GlobalSettingFragment"
        android:label="@string/setting_label">

        <action
            android:id="@+id/action_global_to_caption"
            app:destination="@id/caption_setting_fragment" />
    </fragment>

    <fragment
        android:id="@+id/caption_setting_fragment"
        android:name="com.example.sunmoviedb.ui.captionsetting.CaptionSettingFragment"
        android:label="@string/caption_setting_label" />
</navigation>
